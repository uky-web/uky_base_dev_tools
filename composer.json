{
    "name": "uky-web/uky_platform_dev_tools",
    "description": "This is used to install the development tools for the uky web platform.",
    "type": "uky-dev-tools",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "University of Kentucky Webcom",
            "email": "universitywebservices@l.uky.edu"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://satis.uky.dev"
        },
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
            {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "autoload": {
        "psr-4": {
            "UkyWeb\\UkyPlatformDevTools\\": "src/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "drupal/stage_file_proxy": "^1.1",
        "drupal/devel": "^4.0"
    },
    "scripts": {
        "post-install-cmd": [
            "@composer drupal:scaffold",
            "..."
        ],
        "post-update-cmd": [
            "@composer drupal:scaffold",
            "..."
        ]
    },
    "extra": {
        "drupal-scaffold": {
            "file-mapping": {
                "[project-root]/.ddev/config.yaml": "src/.ddev/config.yaml",
                "[project-root]/.ddev/gitpod-setup-ddev.sh": "src/.ddev/gitpod-setup-ddev.sh",
                "[project-root]/.ddev/run-phpstorm.sh": "src/.ddev/run-phpstorm.sh",
                "[project-root]/.ddev/uk-site-install.sh": "src/.ddev/uk-site-install.sh",
                "[project-root]/.theia/launch.json": "src/.theia/launch.json",
                "[project-root]/.vscode/launch.json": "src/.vscode/launch.json",
                "[project-root]/.gitpood.Dockerfile": "src/.gitpod.Dockerfile",
                "[project-root]/.gitpod.yml": "src/.gitpod.yml",
                "[web-root]/sites/default/settings.ddev.php": "src/settings.ddev.php"
            }
        }
    }
}
