{
    "name": "uky-web/uky_platform_dev_tools",
    "description": "This is used to install the development tools for the uky web platform.",
    "type": "uky-dev-tools",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "University of Kentucky Webcom",
            "email": "universitywebservices@l.uky.edu"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://satis.uky.dev"
        },
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
            {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "drupal/stage_file_proxy": "^1.1",
        "drupal/devel": "^4.0"
    },
    "require-dev": {
        "drupal/drupal-extension": "^3.1",
        "behat/mink": "~1.7",
        "behat/mink-goutte-driver": "~1.2",
        "jcalderonzumba/gastonjs": "~1.0.2",
        "jcalderonzumba/mink-phantomjs-driver": "~0.3.1",
        "mikey179/vfsstream": "~1.2",
        "phpunit/phpunit": "~4.8",
        "symfony/css-selector": "~2.8"
    },

    "scripts": {
        "post-install-cmd": [
            "@composer drupal:scaffold",
            "..."
        ],
        "post-update-cmd": [
            "@composer drupal:scaffold",
            "..."
        ]
    },
    "extra": {
        "drupal-scaffold": {
            "file-mapping": {
                "[project-root]/.ddev/config.yaml": "assets/.ddev/config.yaml",
                "[project-root]/.ddev/gitpod-setup-ddev.sh": "assets/.ddev/gitpod-setup-ddev.sh",
                "[project-root]/.ddev/run-phpstorm.sh": "assets/.ddev/run-phpstorm.sh",
                "[project-root]/.ddev/uk-site-install.sh": "assets/.ddev/uk-site-install.sh",
                "[project-root]/.theia/launch.json": "assets/.theia/launch.json",
                "[project-root]/.vscode/launch.json": "assets/.vscode/launch.json",
                "[project-root]/.gitpod.Dockerfile": "assets/.gitpod.Dockerfile",
                "[project-root]/.gitpod.yml": "assets/.gitpod.yml",
                "[project-root]/.lando/config/php.ini": "assets/.lando/config/php.ini",
                "[project-root]/.lando/scripts/lando-install.sh": "assets/.lando/scripts/lando-install.sh",
                "[project-root]/.lando.yml": "assets/.lando.yml",
                "[web-root]/sites/default/settings.ddev.php": "assets/settings.ddev.php",
                "[web-root]/sites/default/settings.lando.php": "assets/settings.lando.php",
                "[web-root]/sites/default/default.settings.php": "assets/default.settings.php",
                "[web-root]/sites/development.services.yml": "assets/development.services.yml"
            }
        }
    }
}
